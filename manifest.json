{
  // Required
  "manifest_version": 2,
  "name": "WellSent",
  "version": "0.1",

  // Recommended
  "description": "Destigmatize your language around mental health.",

  // Pick one (or none)
  "browser_action": {
    "default_icon": "public/icon.png",
    "default_title": "WellSent",
    "default_popup": "popup.html"
    },

  "permissions": ["activeTab"],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles.css"],
    "js": ["scripts.js"]
    }]
}