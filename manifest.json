{
  // Required
  "manifest_version": 2,
  "name": "StopStigma",
  "version": "0.1",

  // Recommended
  "default_locale": "en",
  "description": "A plain text description",
  "icons": {"icon"},

  // Pick one (or none)
  "browser_action": {
    "default_icon": "public/images/icon.png",
    "default_title": "StopStigma",
    "default_popup": "popup.html"
    },


  "background": {
    // Recommended
    "persistent": false,
  },
  "permissions": ["activeTab"]
}